<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Activity_PersionalCenter" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/black" >

        <ImageView
            android:id="@+id/imageView1_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/logo"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/title_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="。。。"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/title_left_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/base_personal_selector"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_photo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/lena" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/user_photo"
            android:text="项羽"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/user_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/user_name"
            android:singleLine="true"
            android:text="肢体语言专家,中科院教授"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/user_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/user_photo"
            android:singleLine="true"
            android:text="50"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/user_focus_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_focus"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/user_photo"
            android:singleLine="true"
            android:text="他关注的人"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/user_focused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/user_photo"
            android:singleLine="true"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/user_focused_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_focused"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/user_photo"
            android:singleLine="true"
            android:text="关注他的人"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/publish_question"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/personal_question_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="发布的问题  8"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/answer_question"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/personal_question_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="回答的问题  4"
            android:textColor="@color/white" />
    </LinearLayout>

    <GridView
        android:id="@+id/question_item"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:numColumns="3" 
        android:layout_marginTop="5dp" >
    </GridView>

</LinearLayout>