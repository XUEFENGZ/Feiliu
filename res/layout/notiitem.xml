<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/noti_left_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/keke" />

    <LinearLayout
        android:id="@+id/noti_middle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/noti_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="读心者"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/noti_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="读心者免费赠送1200张《福尔摩斯》电影票"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/noti_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5月25日"
            android:textColor="#DCDCDC"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/noti_right_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/keke" />

</LinearLayout>